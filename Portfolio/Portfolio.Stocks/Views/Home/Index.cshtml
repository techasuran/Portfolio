@model IEnumerable<Portfolio.Stocks.Entities.Stock>


@{
    ViewBag.Title = "Index";
    WebGrid grid = new WebGrid(Model);
}

<h2>Index</h2>


@grid.GetHtml(columns:new[] 
{grid.Column("CompanyName"),
    grid.Column("InvestedPrice"),
    grid.Column("Quantity"),
    grid.Column("TotalValue",format:(item)=>item.Quantity*item.InvestedPrice)
})

